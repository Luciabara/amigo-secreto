<body>

    <h1>Juego de Amigo Secreto</h1>
    <div class="container">
        <label for="names">Ingrese los nombres (separados por comas):</label>
        <input type="text" id="names" placeholder="Juan, Ana, Pedro, etc.">
        <button onclick="sortFriends()">Generar Amigo Secreto</button>

        <div id="result" class="result" style="display:none;">
            <h3>Resultados:</h3>
            <ul id="resultList"></ul>
        </div>
    </div>

    <script>
        function sortFriends() {
            // Obtener los nombres desde el input y limpiar espacios extra
            let names = document.getElementById("names").value.split(',').map(name => name.trim());
            
            // Comprobar si se ingresaron nombres
            if (names.length < 2 || names.some(name => name === "")) {
                alert("Por favor ingrese al menos dos nombres válidos.");
                return;
            }

            // Barajar los nombres
            let shuffledNames = shuffleArray([...names]);

            // Asignar amigo secreto (circular)
            let result = [];
            for (let i = 0; i < names.length; i++) {
                result.push(`${names[i]} -> ${shuffledNames[i]}`);
            }

            // Mostrar los resultados en la página
            let resultList = document.getElementById("resultList");
            resultList.innerHTML = "";  // Limpiar resultados anteriores
            result.forEach(r => {
                let li = document.createElement("li");
                li.textContent = r;
                resultList.appendChild(li);
            });

            // Mostrar la sección de resultados
            document.getElementById("result").style.display = "block";
        }

        // Función para barajar un arreglo de manera aleatoria
        function shuffleArray(arr) {
            for (let i = arr.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [arr[i], arr[j]] = [arr[j], arr[i]];
            }
            return arr;
        }
    </script>

</body>
</html>
